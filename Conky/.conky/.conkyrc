alignment top_middle
background yes
border_margin 50
border_width 50
default_color ffffff        
double_buffer yes
draw_borders no
draw_outline no
draw_shades no
maximum_width 500
minimum_size 175
no_buffers yes
override_utf8_locale yes
own_window yes
own_window_title conky
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_transparent yes
own_window_type normal 
text_buffer_size 8000
total_run_times 0
update_interval 0.5
uppercase no
use_xft yes
xftalpha 1
xftfont Freesans:pixelsize=9

TEXT
${font Zekton:pixelsize=80}${alignc}${time %H:%M}${font}
${font Zekton:pixelsize=15}${alignc}${time  %B %d, %Y}
${alignc}${time %A}${font}
